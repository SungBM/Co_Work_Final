<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.naver.cowork.mybatis.mapper.MemberMapper">

	<select id="isId" resultType="member">
		select *
		from user_info where user_id = #{user_id}
	</select>

	<insert id="insert">
		insert into member3
		values
		(#{id}, #{password}, #{name}, #{age}, #{gender}, #{email}, #{auth})
	</insert>

	<select id="logincheck" resultType="member" parameterType="Map">
		select * from user_info where id = #{id} and password = #{password}
	</select>

	<update id="update">
		update user_info
		set
		age = #{age},
		name = #{name},
		gender = #{gender},
		email = #{email}
		where id = #{id}
	</update>


</mapper>