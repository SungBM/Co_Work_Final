	<select id="isId" resultType="int">
		select USER_ID
		from USER_INFO where USER_ID = #{USER_ID}
	</select>

	<insert id="insert">
		insert into USER_INFO
		values
		(#{USER_ID}, #{USER_PASSWORD}, #{USER_EMAIL}, #{USER_CODE}, #{USER_NAME},
		 #{USER_IMG}, #{USER_IS_ADMIN}, #{USER_DEPT}, #{USER_JOB}, #{USER_FAX},
		 #{USER_INTRO}, #{USER_CARD}, #{USER_STATE}, #{USER_JOIN_DATE}, #{USER_PHONE},
		 #{USER_LASTTIME}, #{USER_PASSWORD_CH}, #{CREATED_AT}, #{CREATEWHO}, #{UPDATE_AT},
		 #{UPDATEWHO}, #{AUTH})
	</insert>

